<html>
    <head>
        <title>
            <%=tittle %>
        </title>
        <script src="https://kit.fontawesome.com/9dd661b484.js" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"> </i>
           My contact lsit
        </h1>
        <div id="contaclistcontainer">
            <ul> 
                <% for (let i of contact_list){%>

                    <li class="contact">
                        <div class="details">
                        <p ><%= i. name%></p>
                        <p ><%= i.phone%></p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%=i._id %>">
                            <i class="fas fa-window-close"> </i>

                        </a> 

                    </div>
                    </li>
               <% } %>
            </ul>
        </div>
        
        <form id="contact_form" action="/create-contact" method="post">
            <input type="text" name="name" placeholder="enter name" required >
            <input type="number" name="phone" placeholder="enter phoe" required>
            <button type="submit" id="addbutton">Add contact</button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>
